\ProvidesPackage{beamerfontthememetropolis}
\usepackage[no-math]{fontspec}

\defaultfontfeatures{Mapping=tex-text}
\newfontfamily\Book{Sisco Book}
\newfontfamily\BookTitle{Sisco Book}
\newfontfamily\Medium{Sisco Medium}


\setbeamerfont{title}{family=\Book, size=\Huge}
\setbeamerfont{subtitle}{family=\Book, size=\small}
\setbeamerfont{author}{family=\Book, size=\small}
\setbeamerfont{date}{family=\Book, size=\tiny}

\setbeamerfont{block title}{family=\Book, size=\normalsize}
\setbeamerfont{block title alerted}{family=\Book, size=\normalsize}

\setbeamerfont{frametitle}{family=\Book, size=\normalsize}
\setbeamerfont{framesubtitle}{family=\Medium, size=\tiny}

\setbeamerfont{footnote}{family=\Book, size=\Tiny}

\setbeamerfont{caption}{family=\Book, size=\small}
\setbeamerfont{caption name}{family=\Book}

\setbeamerfont{description item}{family=\Book}
\setbeamerfont{section in toc}{family=\Book, size=\tiny}

\setbeamerfont{page number in head/foot}{size=\tiny, family=\Book}


\linespread{1.15}
